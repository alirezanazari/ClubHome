<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_register"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ir.alirezanazari.clubhome.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_waitingList"
            app:destination="@id/waitingListFragment" />
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/nav_main" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="ir.alirezanazari.clubhome.ui.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/nav_main" />
    </fragment>

    <fragment
        android:id="@+id/waitingListFragment"
        android:name="ir.alirezanazari.clubhome.ui.waiting.WaitingListFragment"
        android:label="WaitingListFragment"
        tools:layout="@layout/fragment_waiting_list" />

    <include app:graph="@navigation/nav_main" />
</navigation>